# Server Configuration
PORT=3001
NODE_ENV=production
CORS_ORIGIN=https://your-username.github.io

# API Keys (Store these securely)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
OPENWEATHER_API_KEY=your_openweather_api_key_here
ELEVATIONAPI_KEY=your_elevation_api_key_here

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# Cache Configuration
CACHE_TTL_SECONDS=3600
ENABLE_CACHE=true

# Security Configuration
TRUST_PROXY=false
ENABLE_HELMET=true

# Logging Configuration
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Feature Flags
ENABLE_WEATHER_API=true
ENABLE_MAPS_API=true
ENABLE_ELEVATION_API=true
ENABLE_GEOCODING=true

# Optional: Database Configuration (for usage tracking)
# DATABASE_URL=postgresql://user:password@localhost:5432/gem_optimizer
# ENABLE_USAGE_TRACKING=false